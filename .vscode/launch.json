{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Launch Backend (Node.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/index.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect"],
      "console": "integratedTerminal",
      "restart": true,
      "stopOnEntry": false,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "console"
    },
    {
      "name": "ğŸ§ª Debug Backend Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/node_modules/.bin/mocha",
      "args": [
        "--require",
        "test/test_helper.js",
        "test/**/*.test.js",
        "--timeout",
        "10000",
        "--inspect-brk"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "test"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "ğŸ” Debug Specific Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/node_modules/.bin/mocha",
      "args": [
        "${file}",
        "--require",
        "test/test_helper.js",
        "--timeout",
        "10000",
        "--inspect-brk"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "test"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "ğŸ¯ Launch Frontend (Angular)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    },
    {
      "name": "ğŸ§ª Debug Angular Tests",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    },
    {
      "name": "ğŸ³ Attach to Backend in Docker",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "/usr/src/app",
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "ğŸ”§ Debug Database Migration",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/node_modules/.bin/sequelize-cli",
      "args": [
        "db:migrate"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "ğŸ“Š Debug Health Check Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/scripts/verify-db.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Launch Full Stack",
      "configurations": [
        "ğŸš€ Launch Backend (Node.js)",
        "ğŸ¯ Launch Frontend (Angular)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "ğŸ§ª Debug Full Stack Tests",
      "configurations": [
        "ğŸ§ª Debug Backend Tests",
        "ğŸ§ª Debug Angular Tests"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    }
  ]
}